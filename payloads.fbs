enum StatusCode : byte 
{
    // Driver instance is booting up
    Booting = 0,
    // Driver instance is running normally
    Running = 1,
    // Driver instance is in a panic state
    Panic = 2
}

table Status {
    pza_id: string;
    code: StatusCode;
    message: string;
}

table Error {
    pza_id: string;
    message: string;
}
